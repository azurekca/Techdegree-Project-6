extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Hand Crafted Websites

      p.lead.text-light
        | A collection of websites and projects I made in the first year of learning web development.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            //- 550 x 550
            div: img.thumbnail(src=`${project.image_urls.cover}` alt=`${project.image_urls.alt}`)
            h3 #{project.project_name}
