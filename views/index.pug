extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Hand Crafted Websites & Apps

      p.lead.text-light
        | A collection of websites and apps I made in the first two years of learning web development.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href=`/project/${project.id}`)
            //- 550 x 550
            div
              +pic(project.image_urls.cover, project.image_urls.alt)(class="thumbnail")
            h3 #{project.project_name}
